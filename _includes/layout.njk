{% from "../node_modules/govuk-frontend/govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "../node_modules/govuk-frontend/govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}
{% from "../node_modules/govuk-frontend/govuk/components/skip-link/macro.njk" import govukSkipLink %}
{% from "../node_modules/govuk-frontend/govuk/components/header/macro.njk" import govukHeader %}
{% from "../node_modules/govuk-frontend/govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "../node_modules/govuk-frontend/govuk/components/footer/macro.njk" import govukFooter %}

<html lang="en" class="govuk-template">
  {% set themeColor = "blue" %}
  {% set bodyClasses = "no-js" %}
  {% set serviceName = "Docs As Code - Nunjucks"%}
  {% set containerClasses = "govuk-width-container" %}
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="{{themeColor}}"> 
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {% block head %}
      <link href="/assets/main.css" rel="stylesheet">
    {% endblock %}
    <title>{{title}}</title>
  </head>

  <body class="govuk-template__body">

  <header class="govuk-header " role="banner" data-module="govuk-header">
    <div class="govuk-header__container govuk-width-container">
      <div class="govuk-header__logo">
        <a href="#" class="govuk-header__link govuk-header__link--homepage">
          <span class="govuk-header__logotype">            
            <span class="govuk-header__logotype-text">              
            </span>
          </span>
        </a>
      </div>
    </div>
  </header>

    <div class="govuk-width-container govuk-body">
      {% block content %}
        <main class="govuk-main-wrapper " id="main-content" role="main">
          {{ content | safe }}
        </main>
      {% endblock %}
    </div>

    <footer class="govuk-footer " role="contentinfo">
      <div class="govuk-width-container ">
        <div class="govuk-footer__meta">
          <div class="govuk-footer__meta-item govuk-footer__meta-item--grow"></div>
          <div class="govuk-footer__meta-item"></div>
        </div>
      </div>
    </footer>

    {% block bodyEnd %}
      <script src="assets/all-min.js"></script>
      <script>window.GOVUKFrontend.initAll()</script>
    {% endblock %}

  </body>

</html>